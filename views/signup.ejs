<body class="bg-orange-100 text-gray-800 font-sans min-h-screen flex justify-center items-center">
    <div class="w-full max-w-md bg-white p-6 rounded-md shadow-lg">
        <h1 class="text-3xl font-bold text-orange-400 text-center mb-6">Signupüê±</h1>
        <form id="signupForm" action="/user" method="POST" class="flex flex-col gap-4">
            <label class="block text-sm font-medium text-gray-600">Full name: </label>
            <input type="text" required name="name" id="name" class="border border-gray-300 rounded-md w-full p-2 mt-1 focus:outline-none focus:ring-2 focus:ring-orange-400">
            <br>
            <label class="block text-sm font-medium text-gray-600">Email: </label>
            <input type="email" required name="email" id="email" class="border border-gray-300 rounded-md w-full p-2 mt-1 focus:outline-none focus:ring-2 focus:ring-orange-400">
            <br>
            <label class="block text-sm font-medium text-gray-600">Password: </label>
            <input type="password" required name="password" id="password" class="border border-gray-300 rounded-md w-full p-2 mt-1 focus:outline-none focus:ring-2 focus:ring-orange-400">
            <br>
            <button type="submit" class="bg-orange-400 text-white font-semibold px-4 py-2 rounded-md hover:bg-orange-500">Signup</button>
        </form>
    </div>
    

